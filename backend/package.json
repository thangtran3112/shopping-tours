{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend with Express",
  "main": "src/server.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy:tsc": "cp -r src/dev-data/data dist/dev-data && cp config.env dist",
    "postbundle": "cp config.env build/config.env &&cp esbuild/package.json build && cd build && npm i",
    "bundle": "esbuild src/server.ts --bundle --minify --platform=node --sourcemap --external:bcrypt --outfile=build/server.js && npm run postbundle",
    "build": "npx tsc && npm run copy:tsc && npm run postbuild",
    "postbuild": "cp package*.json dist && cd dist && npm ci --production",
    "start": "NODE_ENV=development nodemon",
    "start:prod": "NODE_ENV=production nodemon",
    "lint": "eslint \"**/*.ts\" --fix",
    "format": "prettier --write \"**/*.ts\"",
    "clean": "rm -rf dist",
    "delete": "npx ts-node src/dev-data/data/import-dev-data.ts --delete",
    "import": "npx ts-node src/dev-data/data/import-dev-data.ts --import",
    "debug": "npm run build && ndb dist/server.js"
  },
  "author": "Thang Tran",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.15",
    "@types/util.promisify": "^1.0.8",
    "@types/validator": "^13.12.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "ndb": "^1.1.5",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@codegenie/serverless-express": "^4.14.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.13",
    "slugify": "^1.6.6",
    "validator": "^13.12.0"
  }
}
